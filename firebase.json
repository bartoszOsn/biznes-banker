{
	"hosting": {
		"public": "dist",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"emulators": {
		"database": {
			"host": "0.0.0.0",
			"port": 9000
		},
		"hosting": {
			"port": 5000,
			"host": "0.0.0.0"
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": true
	},
	"database": {
		"rules": "database.rules.json"
	}
}
